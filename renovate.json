{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "customManagers:dockerfileVersions"
  ],
  "dependencyDashboard": false,
  "labels": ["dependencies"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "build.sh"
      ],
      "matchStrings": [
        "ui_version=(?<currentValue>.*?)\\n"
      ],
      "depNameTemplate": "NethServer/nethsecurity-ui",
      "datasourceTemplate": "github-releases"
    }
  ]
}
